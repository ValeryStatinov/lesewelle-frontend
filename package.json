{
  "name": "lesewelle-frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:content": "vite build -m development --watch --config vite.config.content.ts",
    "dev:background": "vite build -m development --watch --config vite.config.background.ts",
    "dev": "npm-run-all --parallel dev:content dev:background",
    "clean": "rm -rf dist",
    "build:content": "vite build -m production --config vite.config.content.ts",
    "build:background": "vite build -m production --config vite.config.background.ts",
    "build": "yarn clean && tsc -b && yarn build:content && yarn build:background",
    "release": "yarn build && cd dist && zip -r ../extension.zip . && cd ..",
    "lint": "eslint ."
  },
  "dependencies": {
    "@amplitude/analytics-browser": "2.30.0",
    "@amplitude/unified": "1.0.0-beta.9",
    "@radix-ui/react-slot": "1.2.4",
    "@tailwindcss/vite": "^4.1.16",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lodash": "4.17.21",
    "lucide-react": "0.553.0",
    "radix-ui": "1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "1.4.0",
    "valtio": "2.2.0"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/chrome": "^0.1.27",
    "@types/lodash": "^4",
    "@types/node": "24.6.0",
    "@types/react": "19.1.16",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react-swc": "4.1.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-better-tailwindcss": "3.7.10",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.22",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "6.0.5",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0",
    "vite": "7.1.7",
    "vite-plugin-svgr": "4.5.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.7"
  }
}
